.card
	elevation(4)
	border-radius: .5rem

.button
	border: none
	border-radius: 6px
	elevation(3)
	cursor: pointer
	font-size: 18px
	font-weight: bold
	padding: .7rem 1.4rem
	position: relative
	easeOutQuart(.15)
	background: linear-gradient(270deg, #553594 0, #612694 100%)
	color: white

	&:hover
		box-shadow: 0 8px 15px 0 rgba(0, 0, 0, .1), 0 4px 7px 0 rgba(0, 0, 0, .07)
		transform: translateY(-1px)
		easeInQuart(.15)

.button.secondary
	background: white
	color: purple

	&:hover
		background: #e6e6e6

.page-links
	li
		// border-bottom: solid 4px purple
		// box-shadow:
		display: flex
		// margin-bottom: 3rem
		padding: 2rem 1rem
		text-align: center

		.picture
			width: 25rem

			h3
				color: purple
				font-size: 2rem
				padding-bottom: 1rem
				text-align: center

			img // I want the pictures and titles to be in horizontal alignment
				border-radius: 7.5rem
				height: 15rem
				object-fit: cover
				width: 15rem

	.excerpt
		align-items: center
		display: flex
		margin: 0 auto
		max-width: 40rem
