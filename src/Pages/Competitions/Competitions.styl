/*
 *  Styles for the competition Page
 */
.competitions
	/*
	 *  Styles for the hero image above the fold
	 */
	.hero
		margin-top: 6rem
		// NEED TO DECREASE THIS PADDING
		padding: 0 10rem 8rem
		position: relative
		width: 100%

		// An image that is 55rem high and is grayscale
		// TODO: CHANGE THE WIDTH 100% TO SOMETHING DIFFERENT
		img
			border-radius: .5rem
			filter: grayscale(100%)
			height: 55rem
			object-fit: cover
			width: 100%

		// Moves the card to be in the middle of the image
		// Also sets the background to a slightly transparant purple
		.hero-card
			align-items: center
			background: rgba(81, 40, 136, 65%)
			border-radius: .5rem
			color: white
			display: flex
			flex-direction: column
			left: 0
			margin: 0 auto
			max-width: 63rem
			padding: 2.5rem 0 3.5rem
			position: absolute
			right: 0
			text-align: center
			top: 12rem

			// Text shadow for better readability
			// WHY IS THE PADDING LIKE IT IS?
			p
				font-size: 1.8rem
				padding: 2rem 4rem 3rem
				text-shadow: 4px 0 4px rgba(0, 0, 0, 50%)

			.button
				background: none
				border: solid 2px white
				padding: 1.5rem 2.7rem

	/*
	 *  Styles for the Blog Post Links
	 */
	ul
		align-items: center
		display: flex
		flex-wrap: wrap
		justify-content: center

	// The content of the card.
	// Transition is for the whole card.
	// Fixed with because?
	li.blog-links-card
		margin: 3rem
		easeOutCubic(.3)
		display: block
		// 
		height: 0%
		padding: 2rem
		width: 30rem

		.picture
			margin: 0 auto

		// Blog link image
		img
			border-radius: 9rem
			height: 17.5rem
			padding-bottom: 1rem
			width: @height

		// Blog link header
		h3
			padding-bottom: 2rem
			padding-top: .5rem

		.excerpt
			display: block

		a
			height: 0
			easeOutCubic(.3s)
			display: block

		// Blog link button
		// This handles the button's transition state when the card is not hovered
		// The definition needs to be here because of the wrapper hover state
		.button
			background: rgba(0, 0, 0, 0)
			box-shadow: none
			color: rgba(0, 0, 0, 0)
			font-size: 1.8rem
			font-weight: 500
			height: 0
			margin-top: 0
			padding: 0
			position: relative
			// allows the button to fly in from the top
			transform: translateY(-2rem)
			z-index: 2

		// When the card is hovered, it is roted and moved slightly
		&:hover
			transform: rotate(1deg) translateX(-10px) translateY(-10px)
			easeInCubic(.2)

			a
				height: auto
				easeInCubic(.3)

			// This handles the button's transition state when the card is hovered
			.button
				background: purple
				margin-top: 1.5rem
				elevation(3)
				color: white
				height: auto
				padding: .7rem 2rem
				transform: translateY(0)
				transition-delay: .5s