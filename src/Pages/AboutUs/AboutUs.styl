.about-us {
	.hero-image {
		display: block
		object-fit: cover
		width: 100%
	}

	.title-section {
		align-items: center
		background: purple url('http://res.cloudinary.com/ksu-rob/image/upload/v1534524963/AboutUsBackground.svg') no-repeat bottom
		background-position: top
		background-size: cover
		color: white
		display: flex
		flex-direction: column
		height: 200px
		justify-content: center
	}

	.subheading {
		padding-top: 1rem
	}

	.index-heading {
		color: purple
		padding-top: 5rem
		text-align: center
	}

	.cards {
		display: flex
		justify-content: center
		padding-top: 3rem
	}

	.person {
		position: relative

		&:not(:first-child) {
			margin-left: 2.5rem
		}

		.extra-info {
			background: darkGray
			border-radius: 5px
			color: white
			opacity: 0
			padding: 2rem
			position: absolute
			transition: none
			white-space: nowrap
			z-index: 1

			&.show {
				opacity: 1
				easeInCubic(opacity, .3)
			}

			p:not(:last-child) {
				padding-bottom: 1rem
			}
		}
	}

	.card.officer {
		background: white
		border-radius: 5px
		elevation(5)
		padding: 2rem 2.5rem 1rem

		&.odd {
			transform: rotate(8deg)
		}

		&.even {
			transform: rotate(-8deg)
			z-index: 1
		}

		.header {
			font-size: 18px
			text-align: center
		}

		.card-image {
			border-radius: 5px
			display: block
			margin: 0 auto
			padding: 1rem 0
			width: 175px
		}

		.position {
			color: darkGray
			font-weight: 600
			text-align: center
		}
	}
}
