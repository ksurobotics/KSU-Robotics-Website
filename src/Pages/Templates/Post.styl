.post {
	.back {
		align-items: center
		background: none
		border: none
		border-radius: 5px
		display: flex
		margin-left: 3rem
		margin-top: 2rem
		transition: transform .2s ease-in

		svg {
			height: 3.2rem
			width: @height
		}

		.text {
			color: purple
			font-size: 1.8rem
			font-weight: 600
			margin-left: 1rem
		}

		&:hover {
			cursor: pointer
			transform: translateY(-2px)
		}
	}
}

.post {
	.content {
		margin: 0 auto
		max-width: 90rem
	}

	.title {
		color: purple
		font-size: 2.6rem
		padding-bottom: 3rem
		text-align: center
	}

	.featured-image {
		display: block
		margin: 0 auto
		max-width: 90%
		padding-bottom: 3rem
	}

	.content {
		h1, h2, h3, h4, h5 {
			color: purple
			padding: 1.5rem 0
		}

		p {
			margin-bottom: 1rem
		}

		a {
			color: purple
			text-decoration: underline
		}
	}
}
