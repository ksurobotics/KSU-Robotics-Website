.post {
	.back {
		align-items: center
		background: none
		border: none
		border-radius: 5px
		display: flex
		margin-left: 3rem
		margin-top: 2rem
		transition: transform .2s ease-in

		svg {
			height: 3.2rem
			width: @height
		}

		.text {
			color: purple
			font-size: 1.8rem
			font-weight: 600
			margin-left: 1rem
		}

		&:hover {
			cursor: pointer
			transform: translateY(-2px)
		}
	}
}

.post {
	.page-wrapper {
		margin: 0 auto
		max-width: 90rem
	}

	img.featured {
		border-radius: 5px
		display: block
		height: 40rem
		margin: 0 auto
		margin-bottom: 3rem
		object-fit: cover
		width: 100%
	}

	h1.title {
		color: purple
		font-size: 2.4rem
		padding-bottom: 3rem
		text-align: center
	}

	.content {
		p {
			margin-bottom: 1rem
		}

		a {
			color: purple
			text-decoration: underline
		}
	}
}
