/*
 *  All Headers get these styles
 */
.header-wrapper
  align-items: center
  display: flex
  justify-content: space-between
  padding: 0 6.2rem
  position: absolute

  ul.main-nav
    align-items: center
    display: flex

    li
      margin-left: 2rem

    a
      font-size: 1.8rem
      font-weight: bold
      letter-spacing: .5px
      padding-bottom: 0
      text-decoration: none
      transition: .3s cubic-bezier(.52, 0, .26, 1.2)
      transition-property: color, padding-bottom, border-bottom

/*
 * Home page header
 */
.header-wrapper.home
  height: 9rem
  width: 100%

  .logo
    margin-right: auto

  .main-nav
    // Handles the bottom border hover
    .current-url, a:hover
      border-bottom: 3px solid white
      color: white
      padding-bottom: .3rem

    a
      border-bottom: 4px solid rgba(255, 255, 255, 0)
      color: rgba(255, 255, 255, .5)

/*
 *  Home Header Responsive
 */
+tablet-land()
  .header-wrapper.home
    .logo img
      max-width: 20rem

  padding: 0 4rem

+tablet-port()
  .header-wrapper.home
    flex-direction: column
    justify-content: center
    padding: 0

    .logo
      margin-right: 0

    .main-nav
      li
        margin-left: 1rem

      li:nth-child(1)
        margin-left: 0

      a
        font-size: 1.4rem

/*
 *  All other headers
 */
.header-wrapper.general
  background: white
  box-shadow: 0 3px 10px rgba(0, 0, 0, .03), 0 5px 15px rgba(0, 0, 0, .04)
  height: 4.7rem
  position: relative

  .main-nav
    .current-url, a:hover
      border-bottom: 3px solid purple
      color: purple
      padding-bottom: 1rem

    a
      border-bottom: 4px solid rgba(255, 255, 255, 0)
      color: rgba(81, 40, 136, 60%)
      font-size: 1.4rem

  .button
    border-radius: 1.5rem
    font-size: 1.3rem
    padding: .7rem 1.5rem

/*
 *  General Header Responsive
 */
+tablet-port()
  .header-wrapper.general
    height: 8.2rem
    padding: 1rem 0

    .logo
      align-self: flex-start
      margin-left: 2rem

    button
      align-self: flex-start
      margin-right: 3rem

    @media (max-width: 400px)
      .header-wrapper.general button
        margin-right: 2rem

    .main-nav
      border-top: 1px solid rgba(81, 40, 136, 60%)
      justify-content: center
      margin-top: 2rem
      padding-top: .5rem
      position: absolute
      width: 100%

      li
        margin-left: 1rem

      li:nth-child(1)
        margin-left: 0

      .current-url, a:hover
        padding-bottom: .6rem

    button
      padding: .5rem 1.2rem