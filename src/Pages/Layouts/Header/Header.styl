/*
 *  All Headers get these styles
 */
.header-wrapper {
  align-items: center
  display: flex
  justify-content: space-between
  padding: 0 6.2rem
  position: absolute

  .text {
    font-size: 2.2rem
    font-weight: 600
    letter-spacing: 1.5px
    margin-right: 2.5rem
  }

  .logo {
    align-items: center
    display: flex

    svg {
      height: 3.5rem
      width: auto
    }
  }

  ul.main-nav {
    align-items: center
    display: flex

    li {
      margin-left: 2rem
      easeInQuart(.3)
      transition-property: margin-left
    }

    a {
      font-size: 1.8rem
      font-weight: bold
      letter-spacing: .5px
      padding-bottom: 0
      text-decoration: none
      transition: .3s cubic-bezier(.52, 0, .26, 1.2)
      transition-property: color, padding-bottom, border-bottom
    }
  }
}

/*
 * Home page header
 */
.header-wrapper.home {
  height: 9rem
  width: 100%

  .logo {
    color: white
    margin-right: auto
  }

  .main-nav {
    // Handles the bottom border hover
    .current-url, a:hover {
      border-bottom: 3px solid white
      color: white
      padding-bottom: .3rem
    }

    a {
      border-bottom: 4px solid rgba(255, 255, 255, 0)
      color: rgba(255, 255, 255, .5)
    }
  }
}

/*
 *  Home Header Responsive
 */
+tablet-land() {
  .header-wrapper.home {
    padding: 0 4rem
    /* .logo img {
      max-width: 20rem
    } */
  }
}

+tablet-port() {
  .header-wrapper.home {
    flex-direction: column
    padding: 1rem 0

    .logo {
      margin-right: 0
    }

    ul.main-nav {
      li:nth-child(1) {
        margin-left: 0
      }

      a {
        font-size: 1.4rem
      }
    }
  }
}

+mobile() {
  .header-wrapper.home {
    .main-nav {
      li {
        margin-left: .8rem
      }
    }
  }
}

/*
 *  All other headers
 */
.header-wrapper.general {
  background: white
  border-top: 6px solid #512888
  box-shadow: 0 3px 10px rgba(0, 0, 0, .03), 0 5px 15px rgba(0, 0, 0, .04)
  flex-wrap: wrap
  padding: .5rem 6.2rem
  position: relative

  .logo {
    .text {
      font-size: 1.6rem
      letter-spacing: 0
      margin-right: 1.5rem
    }

    svg {
      width: 3.2rem
    }
  }

  .main-nav {
    .current-url, a:hover {
      border-bottom: 3px solid purple
      color: purple
      padding-bottom: 1rem
    }

    a {
      border-bottom: 4px solid rgba(255, 255, 255, 0)
      color: rgba(81, 40, 136, 60%)
      font-size: 1.4rem
    }
  }

  .button {
    border-radius: 1.5rem
    font-size: 1.3rem
    padding: .7rem 1.5rem
  }
}

/*
 *  General Header Responsive
 */
+tablet-port() {
  .header-wrapper.general {
    padding: 1rem 0 0

    .logo {
      align-self: flex-start
      margin-left: 2rem
    }

    button {
      align-self: flex-start
      margin-right: 3rem
    }

    @media (max-width: 400px) {
      .header-wrapper.general button {
        margin-right: 2rem
      }
    }

    .main-nav {
      background: #51288852
      justify-content: center
      margin-top: 1rem
      order: 3
      padding: 1rem 0
      width: 100%

      a {
        color: white
      }

      li:nth-child(1) {
        margin-left: 0
      }

      a.current-url, a:hover, a {
        border-bottom: 4px solid rgba(255, 255, 255, 0)
      }
    }

    button {
      order: 2
      padding: .5rem 1.2rem
    }
  }
}

+mobile() {
  .header-wrapper.general .main-nav li {
    margin-left: .8rem
  }
}
