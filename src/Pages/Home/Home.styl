/*
 * 	 Home page wrapper
 */
.page-wrapper.home-page {
	padding: 0
	width: 100%
}

/*
 * 	 Home Page
 */
.home-page {
	.hero {
		background: purple url('http://res.cloudinary.com/ksu-rob/image/upload/v1533575444/Background-Desktop.1eec9b86.svg') no-repeat bottom
		background-size: cover
		height: 800px
		padding-top: 90px
	}

	.hero-container {
		display: flex
		margin: 0 auto
		max-width: 1100px
		padding: 8rem 6.2rem 0
		easeInCubic(padding, .3s)
	}

	.title {
		color: white
		margin-right: auto
		max-width: 40rem

		.snippet {
			font-size: 2rem
			font-weight: normal
			max-width: 23rem
			padding-top: 2.6rem
		}
	}

	.body {
		padding-top: 5rem
	}

	.content {
		margin: 4rem auto
		max-width: 110rem
		padding: 0 2rem
	}
}

/*
 *  Home Page Responsive
 */
.home-page {
	+tablet-port() {
		.hero-container {
			padding: 8rem 3rem
		}
	}

	@media (max-width: 600px) {
		.hero-container {
			align-items: center
			flex-direction: column
			padding-top: 4rem
		}

		.title {
			margin-right: 0

			.snippet {
				padding-top: 1.6rem
			}
		}
	}
}
