black = #222

.page-wrapper.home-page
	padding: 0
	width: 100%

.home-page
	.hero
		background: purple url('assets/images/Background-Desktop.svg') no-repeat bottom
		background-size: cover
		height: 800px
		padding-top: 90px

	.content-wrapper
		display: flex
		margin: 0 auto
		max-width: 1100px
		padding: 8rem 6.5rem 0

		.title
			color: white
			margin-right: auto
			max-width: 33rem

			h2
				font-size: 2rem
				font-weight: normal
				max-width: 23rem
				padding-top: 2.6rem

	.body
		padding-top: 5rem

.contact-card
	background: white
	max-width: 37rem
	padding: 3rem 3.9rem

	h2
		color: black
		font-size: 2rem
		padding-bottom: 4rem
		text-align: center

	form
		align-items: center
		display: flex
		flex-direction: column

		input[type=text], input[type=email]
			background: #EDF0F2
			border: none
			border-radius: 6px
			color: #64717A
			font-size: 1.4rem
			margin-bottom: 2rem
			padding: 1rem 1.5rem

		input[type=submit]
			margin-top: 2rem
			padding: 1.1rem

	form > *
		min-width: 29rem
