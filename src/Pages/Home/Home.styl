/*
 * 	 Home page wrapper
 */
.page-wrapper.home-page
	padding: 0
	width: 100%

/*
 * 	 Home Page
 */
.home-page
	.hero
		background: purple url('assets/images/Background-Desktop.svg') no-repeat bottom
		background-size: cover
		height: 800px
		padding-top: 90px

	.content-wrapper
		display: flex
		margin: 0 auto
		max-width: 1100px
		padding: 8rem 6.2rem 0
		easeInCubic(.3s)
		transition-property: padding

	.title
		color: white
		margin-right: auto
		max-width: 24rem

		h2
			font-size: 2rem
			font-weight: normal
			max-width: 23rem
			padding-top: 2.6rem

	.body
		padding-top: 5rem

.contact-card
	background: white
	height: 33.2rem
	padding: 3rem 3.9rem
	width: 37rem
	easeInQuart(.3)
	transition-property: width, height, padding

	h2
		color: black
		font-size: 2rem
		padding-bottom: 4rem
		text-align: center
		easeInQuart(.3)
		transition-property: padding

	form
		align-items: center
		display: flex
		flex-direction: column
		justify-content: center

		input[type=text], input[type=email]
			background: #EDF0F2
			border: none
			border-radius: 6px
			color: #64717A
			font-size: 1.4rem
			margin-bottom: 2rem
			padding: 1rem 1.5rem

		input[type=submit]
			margin-top: 2rem
			padding: 1.1rem

	form > *
		width: 29rem
		easeInQuart(.3)
		transition-property: width, padding

/*
 *  Home Page Responsive
 */
.home-page
	+tablet-port()
		.content-wrapper
			padding: 8rem 3rem

		.contact-card
			height: 26.7rem
			padding: 2rem 3rem
			width: 27rem

			h2
				margin: 0 auto
				padding-bottom: 2rem
				width: 22rem

			form > *
				width: 20rem

			.button
				margin-top: 0

	@media (max-width: 600px)
		.content-wrapper
			align-items: center
			flex-direction: column
			padding-top: 4rem

		.title
			margin-right: 0

			h2
				padding-top: 1.6rem

		.contact-card
			margin-top: 4rem
