.contact-card
	background: white
	border-radius: 6px
	max-width: 37rem
	padding: 3rem 3.9rem

	h2
		color: black
		font-size: 2rem
		padding-bottom: 4rem
		text-align: center

	form
		align-items: center
		display: flex
		flex-direction: column

		input[type=text], input[type=email]
			background: #EDF0F2
			border: none
			border-radius: 6px
			color: #64717A
			font-size: 1.4rem
			margin-bottom: 2rem
			padding: 1rem 1.5rem

		input[type=submit]
			margin-top: 2rem
			padding: 1.1rem

	form > *
		min-width: 29rem

.button
	border: none
	border-radius: 6px
	box-shadow: 0 5px 7px 0 rgba(0, 0, 0, .1), 0 2px 4px 0 rgba(0, 0, 0, .07)
	cursor: pointer
	font-size: 18px
	font-weight: bold
	padding: .7rem
	position: relative
	transition: all .15s ease

	&:hover
		box-shadow: 0 8px 15px 0 rgba(0, 0, 0, .1), 0 4px 7px 0 rgba(0, 0, 0, .07)
		transform: translate3d(0, -1px, 0)

.button.secondary
	background: white
	color: purple

	&:hover
		background: #e6e6e6

.button.primary
	background: linear-gradient(270deg, #553594 0, #612694 100%)
	color: white

.page-links
	padding-bottom: 3rem

	li
		// border-bottom: solid 4px purple
		// box-shadow:
		display: flex
		// margin-bottom: 3rem
		padding: 2rem 1rem
		text-align: center

		.picture
			width: 25rem

			h3
				color: purple
				font-size: 2rem
				padding-bottom: 1rem
				text-align: center

			img // I want the pictures and titles to be in horizontal alignment
				border-radius: 7.5rem
				width: 15rem

	.excerpt
		align-items: center
		display: flex
		margin: 0 auto
		max-width: 40rem
