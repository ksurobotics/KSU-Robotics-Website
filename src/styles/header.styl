.header-wrapper
  background: purple
  margin-bottom: 1.45rem
  h1
    img
      height: 80px

.header-container
  margin: 0 auto
  max-width: 960
  padding: 1.5rem 1rem

.main-nav
  ul 
    list-style: none
    display: flex
    li 
      margin-left: 10px
      a 
        text-decoration: none
        font-weight: bold
        color: white
        &:hover 
          text-decoration: underline

.current-link
  border-bottom: 1px solid white

.inactive-link
  color: #ffffffdb