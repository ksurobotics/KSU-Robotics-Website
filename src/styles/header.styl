.header-wrapper
  position: absolute
  width: 100%
  display: flex
  align-items: center
  justify-content: space-around
  height: 9rem
  padding: 0 6.2rem
  margin-bottom: 1.5rem
  .logo
    margin-right: auto
  button
    background: white
    color: purple
    border: none
    border-radius: 5px
    padding: .7rem
    font-size: 18px
    font-weight: bold
    box-shadow: 0 4px 6px 0 rgba(0, 0, 0, 0.4)
    z-index: 2
    cursor: pointer
    &:hover
      box-shadow: 0 6px 6px 0 rgba(0, 0, 0, 0.4)
      background: #e6e6e6
.nav-wrapper
  display: flex
  align-items: center
.main-nav
  ul 
    display: flex
    padding-right: 2.2rem
    align-items: center
    .current-url, a:hover
      border-bottom: 3px solid white
      color: white
      padding-bottom: .3rem
      transition: .3s all cubic-bezier(.52,-1,.26,2);
    a 
      margin-left: 2rem
      text-decoration: none
      font-size: 18px
      letter-spacing: .5px
      font-weight: bold
      color: #e6e6e6
      padding-bottom: 0
      border-bottom: 3px solid rgba(255,255,255,0)
      transition: .3s all cubic-bezier(.8,0,.74,2);