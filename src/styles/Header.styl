.header-wrapper
  position: absolute
  width: 100%
  display: flex
  align-items: center
  justify-content: space-around
  height: 9rem
  padding: 0 6.2rem
  margin-bottom: 1.5rem
  .logo
    margin-right: auto
.nav-wrapper
  display: flex
  align-items: center
.main-nav
  ul 
    margin-right: 2rem
    display: flex
    align-items: center
    .current-url, a:hover
      border-bottom: 3px solid white
      color: white
      padding-bottom: .3rem
      transition: .3s all cubic-bezier(.52,-1,.26,2)
    a 
      margin-left: 2rem
      text-decoration: none
      font-size: 18px
      letter-spacing: .5px
      font-weight: bold
      color: #e6e6e6
      padding-bottom: 0
      border-bottom: 3px solid rgba(255,255,255,0)
      transition: .3s all cubic-bezier(.8,0,.74,2)
.header-wrapper.general
  background: linear-gradient(purple1, purple-1)
  position: relative

@media (max-width: medium-width)
  .header-wrapper
    .logo img
      max-width: 20rem
    padding: 0 4rem